                <div class="column_middle">

                    <div class="weather">
                        <h3> < Todays Brainstorms</h3>
                        
                        <div class="temp_list">
                            <ul>
                                @RenderBody()
                                
                            </ul>
                        </div>
                    </div>



                </div>

                <div class="column_right">

                    <div class="signin_facebook">
                        <p><a href="#">  <i> </i>Submit an Idea</a></p>
                    </div>
                </div>



            </div>
            <div class="clear"></div>
        </div>
    </div>
    <nav id="menu">
        <ul>
            <li><a href="#"><i><img src="/images/user.png"></i></a></li>
            <li><a href="#"><span><i><img src="/images/mail.png"></i> Todays Brainstorms</span><label class="digits active">5</label><div class="clear"></div></a></li>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
        </ul>
    </nav>
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/bootstrap")
